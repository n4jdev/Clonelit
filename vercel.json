{
  "version": 2,
  "builds": [
    {
      "src": "api/tts.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/tts",
      "dest": "api/tts.py"
    }
  ],
  "functions": {
    "api/tts.py": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "build": {
    "env": {
      "PLAYWRIGHT_BROWSERS_PATH": "0"
    }
  }
}
